<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BatterySqLite_Xamarin"
             x:Class="BatterySqLite_Xamarin.MainPage">
    <StackLayout>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!" 
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
        </StackLayout>

        <StackLayout>
            <Button Text="Save" Command="{Binding SaveSQLiteCommand}"></Button>
        </StackLayout>

        <StackLayout>
            <Label Text="{Binding BatteryCharge}"></Label>
        </StackLayout>

    </StackLayout>
</ContentPage>
